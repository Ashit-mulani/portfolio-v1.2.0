---
const { src = "#", class: className = "", text, classTwo = "" } = Astro.props;
---

{text && (
  <div class="relative inline-block group">
    <!-- Trigger -->
    <a
      href={src}
      class={`${className} relative z-10 hover:underline`}
    >
      {text}
    </a>

    {Astro.slots.default && (
      <div
        class={`${classTwo}
          absolute top-full
          w-80 max-w-[90vw]
          -translate-x-1/2

        bg-white
          rounded shadow-[0_2px_8px_rgb(0,0,0,0.1)] 
          border 
          border-neutral-500/10
          p-4

          opacity-0 invisible
          translate-y-3 scale-95
          group-hover:opacity-100
          group-hover:visible
          group-hover:translate-y-0
          group-hover:scale-100

          transition-all duration-200 ease-out
          z-50`}
      >
        <slot />
      </div>
    )}
  </div>
)}

