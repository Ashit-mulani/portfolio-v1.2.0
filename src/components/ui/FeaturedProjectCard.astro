---
import Avatar from "./Avatar.astro";

const {
  image = "",
  avtar = "",
  name = "",
  title = "",
  description = "",
} = Astro.props;
---

<div class="flex flex-col gap-8 h-full w-full">
  <div class="flex flex-col gap-6">
    {
      image && (
        <div class="w-full aspect-video overflow-hidden bg-neutral-50 border border-neutral-500/10">
          <img
            class="w-full h-full object-contain"
            fetchpriority="high"
            loading="eager"
            src={image}
            alt={title}
          />
        </div>
      )
    }
    <div class="flex flex-col gap-4">
      <div class="flex items-center gap-2 text-sm">
        {
          avtar && (
            <Avatar src={avtar} alt={name ?? title ?? "avatar"} size={24} />
          )
        }
        {name && <h3 class="text-neutral-700">{name}</h3>}
      </div>
      <div class="flex flex-col gap-1">
        <h2
          class="text-xl leading-6 font-tilt font-medium tracking-tight text-neutral-800 line-clamp-2"
        >
          {title}
        </h2>
        <p class="text-neutral-500 leading-5 line-clamp-2">
          {description}
        </p>
      </div>
    </div>
  </div>
  <div class="mt-auto">
    <slot />
  </div>
</div>
