---
const { id = "" } = Astro.props;
import { allProjects } from "../../data/project";
const project = allProjects.find((project) => String(project.id) == String(id));
import "../../index.css";
import Avatar from "../ui/Avatar.astro";
import Badge from "../ui/Badge.astro";
import ButtonWithBackground from "../ui/ButtonWithBackground.astro";
import IconButtonWithText from "../ui/IconButtonWithText.astro";
---

{
  project && (
    <div class="flex flex-col gap-8">
      <div class="flex flex-col gap-6">
        <div class="flex flex-col gap-4">
          <h1 class="text-[36px] sm:text-[42px] leading-9 tracking-tight font-tilt text-neutral-800">
            {project.title}
          </h1>
          <p class="text-base sm:text-lg font-lexend leading-6 font-medium text-neutral-500 ">
            {project.description}
          </p>
        </div>
        <div class="flex items-center gap-2">
          <Avatar src={project.avtar} size={26} />
          <span>{project.name}</span>
        </div>
        <div class="flex flex-wrap items-center justify-between border-y gap-2  border-neutral-500/8 py-2">
          <div class="flex items-center gap-1">
            {project.link.github && (
              <a
                title="Github.com | Profile | Ashit-mulani"
                href={project.link.github}
                target="_blank"
              >
                <IconButtonWithText class="text-neutral-500 hover:text-blue-600 smooth text-xs">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-github-icon lucide-github"
                  >
                    <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                    <path d="M9 18c-4.51 2-5-2-7-2" />
                  </svg>
                  GitHub
                </IconButtonWithText>
              </a>
            )}
            {project.link.live && project.link.live.startsWith("https://") ? (
              <a
                title="Fluoce.com | Founder | Ashit-mulani"
                href={project.link.live}
                target="_blank"
              >
                <IconButtonWithText class="text-neutral-500 hover:text-blue-600 smooth text-xs">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="14"
                    height="14"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-globe-icon lucide-globe"
                  >
                    <circle cx="12" cy="12" r="10" />
                    <path d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20" />
                    <path d="M2 12h20" />
                  </svg>
                  Link
                </IconButtonWithText>
              </a>
            ) : (
              <Badge>{project.link.live}</Badge>
            )}
          </div>
          <div class="flex items-center gap-1">
            <ButtonWithBackground class="text-neutral-500 hover:text-black smooth text-xs">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="10"
                height="10"
                viewBox="0 0 24 24"
                fill="currentColor"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-play-icon lucide-play"
              >
                <path d="M5 5a2 2 0 0 1 3.008-1.728l11.997 6.998a2 2 0 0 1 .003 3.458l-12 7A2 2 0 0 1 5 19z" />
              </svg>
              Listen
            </ButtonWithBackground>
          </div>
        </div>
      </div>
      {project.image && (
        <img
          src={project.image}
          alt={project.title}
          fetchpriority="high"
          loading="eager"
          class="h-full w-full aspect-video"
        />
      )}
    </div>
  )
}
