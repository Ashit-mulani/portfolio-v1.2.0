        <a href={socialLinks.medium} target="_blank">
          <IconButton class="px-0 py-0">
            <svg
              fill="#000000"
              width="25px"
              height="25px"
              viewBox="0 0 1024 1024"
              xmlns="http://www.w3.org/2000/svg"
              class="icon"
            >
