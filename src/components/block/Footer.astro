    </div>
    <div class="col-span-3 grid grid-cols-2">
      <div class="flex flex-col gap-4">
        <h4>Works</h4>
        <ul class="flex flex-col items-start gap-2 text-neutral-500">
          {
            ["all", "projects", "componenets", "scripts"].map((menu) => (
              <a
                href={menu == "all" ? route.projects : route.projectsTab(menu)}
                class="hover:text-blue-600 hover:underline"
              >
                <li class="text-xs capitalize line-clamp-1">{menu}</li>
              </a>
            ))
          }
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <h4>Read</h4>
        <ul class="flex flex-col items-start gap-2 text-neutral-500">
          {
            allProjects.map((project) => {
              return (
                <a
                  href={project.link.read}
                  class="hover:text-blue-600 hover:underline"
                >
                  <li class="text-xs capitalize line-clamp-1">
                    {project.name}
                  </li>
                </a>
              );
            })
          }
        </ul>
      </div>
    </div>
  </div>
  <small class="text-neutral-500">
    Â© {new Date().getFullYear()} Ashit Mulani. Built with
    <a
      href={socialLinks.astro}
      target="_blank"
      class="underline hover:text-blue-600"
    >
      Astro.
    </a>
  </small>
</div>
