---
import Hero from "../components/block/Hero.astro";
import Layout from "../layouts/Layout.astro";
import { route } from "../const/route-const";
import LinkButton from "../components/ui/LinkButton.astro";
import { socialLinks } from "../const/route-const";
import TextLink from "../components/ui/TextLink.astro";
import TechStack from "../components/block/TechStack.astro";
import Featuredworks from "../components/block/Featuredworks.astro";
---

<Layout>
  <div class="flex flex-col gap-8">
    <Hero />
    <p class="text-sm
      font-semibold
      text-neutral-600">
      Currently building <TextLink
        link={socialLinks.fluoce}
        target="_blank"
        class="text-[13px] font-lexend">fluoce.com</TextLink
      > — a platform solving real-world workflow challenges. I've shipped <TextLink
        class="text-blue-600 font-semibold font-lexend text-[13px]"
        link={socialLinks.authFluoce}>auth.fluoce.com</TextLink
      >
      for scalable authentication and identity management, Cloud-Fluoce for file and
      asset handling, and I'm now building Form-Fluoce to streamline data collection
      and workflow automation — all while exploring system scalability, distributed
      architecture, and performance optimization.
    </p>
    <div class="flex items-center justify-between font-noto">
      <h3 class="font-medium">Featured Works</h3>
      <LinkButton path={route.projects}> All Works </LinkButton>
    </div>
    <Featuredworks />
    <div class="flex items-center justify-between font-noto">
      <h3 class="font-medium">Tech Stack</h3>
    </div>
    <TechStack />
  </div>
</Layout>
